
{
    "openapi": "3.0.0",
    "info": {
      "title": "Portfólio de Arquiteto de Software",
      "description": "API de portfólio para exibir minhas habilidades, projetos e experiência profissional.",
      "version": "1.0.0"
    },
    "paths": {
      "/skills": {
        "get": {
          "summary": "Lista de Habilidades",
          "description": "Retorna uma lista das principais habilidades técnicas.",
          "responses": {
            "200": {
              "description": "Lista de habilidades",
              "content": {
                "application/json": {
                  "example": {
                    "skills": [
                      "Arquitetura de Microserviços",
                      "Desenvolvimento Android Nativo",
                      "Integração de APIs REST",
                      "Docker e Kubernetes",
                      "CI/CD (Jenkins, GitHub Actions)",
                      "Banco de Dados SQL e NoSQL"
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "/projects": {
        "get": {
          "summary": "Lista de Projetos",
          "description": "Retorna detalhes sobre os principais projetos desenvolvidos.",
          "responses": {
            "200": {
              "description": "Detalhes dos projetos",
              "content": {
                "application/json": {
                  "example": {
                    "projects": [
                      {
                        "name": "Aplicação Modular Android",
                        "description": "Aplicação modular com arquitetura limpa baseada em MVVM.",
                        "technologies": ["Kotlin", "Jetpack", "Retrofit"]
                      },
                      {
                        "name": "Microserviço para Notificações",
                        "description": "Microserviço escalável para envio de notificações por e-mail e SMS.",
                        "technologies": ["Java", "Spring Boot", "RabbitMQ"]
                      },
                      {
                        "name": "Sistema de Automação Residencial",
                        "description": "Sistema de automação para controle de dispositivos IoT em casa.",
                        "technologies": ["Node.js", "MQTT", "Raspberry Pi"]
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      },
      "/experience": {
        "get": {
          "summary": "Experiência Profissional",
          "description": "Retorna um resumo da experiência profissional.",
          "responses": {
            "200": {
              "description": "Resumo da experiência",
              "content": {
                "application/json": {
                  "example": {
                    "experience": [
                      {
                        "company": "Tech Solutions",
                        "role": "Arquiteto de Software",
                        "years": "2020 - Presente",
                        "description": "Responsável por arquitetar soluções escaláveis e liderar equipes de desenvolvimento."
                      },
                      {
                        "company": "Innovatech",
                        "role": "Desenvolvedor Sênior",
                        "years": "2017 - 2020",
                        "description": "Desenvolvimento de aplicações Android e integração de APIs REST."
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
  